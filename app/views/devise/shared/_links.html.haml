- if controller_name != 'sessions'
  = link_to 'Вход', new_session_path(resource_name)
  %br
- if controller_name != 'registrations'
  = link_to 'Регистрация', new_registration_path(resource_name)
  %br
- if controller_name != 'passwords' && controller_name != 'registrations'
  = link_to 'Забыли пароль?', new_password_path(resource_name)
  %br
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "Войти с помощью #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider)
    .buffer-top
      = link_to 'Политика конфиденциальности', 'https://b-b-q.site/politika.html'
      %br
